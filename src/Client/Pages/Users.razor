@page "/users"
@using GasWeb.Shared.Users
@inject HttpClient Http

<h1>Użytkownicy</h1>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Rola</th>
                <th>Aktywny</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Role</td>
                    <td>@user.Active</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    User[] users;

    protected override async Task OnInitializedAsync()
    {
        users = await Http.GetJsonAsync<User[]>("api/users");
    }

}
